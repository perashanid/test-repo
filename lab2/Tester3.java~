   this.designation = x;
   System.out.print( name + " has been promoted to " + x );
    
       if(designaion.equals("lead"){
         salary = 80000;}
               
      else{
        salary = 10500;
      }
          
      System.out.print( " new salary : " + salary );
             
      
   
  
